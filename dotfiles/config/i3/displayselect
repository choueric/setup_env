#!/bin/sh

ROOTDIR=$HOME/.screenlayout

chosen=$(printf "office\\nhome\\nvertical\\nmanual" | rofi -dmenu -i -p "Select display arangement:") &&
    case "$chosen" in
        "office") $ROOTDIR/office.sh;;
        "home") $ROOTDIR/home.sh;;
        "vertical") $ROOTDIR/vertical.sh;;
        "manual") arandr;;
    esac
